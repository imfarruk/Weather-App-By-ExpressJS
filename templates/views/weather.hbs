<html lang="en">

    <head>
        {{>headerlinks}}
    </head>

    <body>

        {{>navbar}}
        <!-------- Main Header----- -->

        <div class="container-fluid">
            <div class="row">
                <div class="col-md-10 col-12 mx-auto main_header">

                    <div class="main_content">
                        <form class="temp_form">
                            <input type="text" id="cityName" class="searchinput" placeholder="Enter City Name"
                                autocomplete="off" />
                            <input type="submit" value="search" id="submitBtn" />
                        </form>
                    </div>

                    <div class="tempInfo" id=tempInfoToggle>
                        <div class="top_layer">
                            <p id="day">Tuesday</p>
                            <p id="today_date">1 DEC</p>
                        </div>

                        <div class="main_layer">
                            <p id="city_name">Output here</p>
                        </div>

                        <div class="middle_layer data_hide">
                            <p ><span id="temp_realval"> </span>&deg;C</p>
                            <p id="temp_status"><i class="fas fa-cloud"></i></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- footer  -->
        {{>footer}}

        <script src="js/main.js"></script>
    </body>

</html>